.container {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 120rpx;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  background: #fff;
  height: 88rpx;
  padding-top: 44px; /* 适配状态栏高度 */
  border-bottom: 1rpx solid #eee;
  width: 100%;
}

.nav-back {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  margin-right: 88rpx; /* 与返回按钮宽度相同，保持标题居中 */
}

.nav-placeholder {
  width: 60rpx;
}

/* 图片上传区域 */
.upload-section {
  padding: 20rpx 30rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 220rpx;
  height: 220rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 表单区域 */
.form-section {
  margin-top: 0;
  background: #fff;
  width: 100%;
}

.form-item {
  min-height: 90rpx;
  padding: 16rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

/* 标题和提示词的特殊样式 */
.title-item, .hint-item {
  padding: 20rpx 30rpx;
}

.title-input, .hint-input {
  width: 100%;
  font-size: 32rpx;
  height: 44rpx;
  line-height: 44rpx;
}

.title-input {
  font-weight: 500;
}

.placeholder {
  color: #999;
  font-size: 32rpx;
}

/* 其他表单项样式 */
.label {
  min-width: 120rpx;
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.value {
  flex: 1;
  font-size: 32rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 32rpx;
  margin-left: auto;
  padding: 0 10rpx;
}

/* 类型选择 */
.type-section {
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
  background: #fff;
}

.type-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.type-options {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.type-option {
  padding: 6rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.type-option.active {
  color: #07C160;
  background: rgba(7,193,96,0.1);
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.draft {
  background: #f5f5f5;
  color: #666;
}

.preview {
  background: #f5f5f5;
  color: #666;
}

.publish {
  background: #07C160;
  color: #fff;
} 