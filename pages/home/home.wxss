/* pages/home/home.wxss */
.container {
  height: 100vh;
  background: #f7f7f7;
  -webkit-overflow-scrolling: touch;
}

/* 轮播图样式 */
.banner {
  height: 400rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 最近浏览样式 */
.recent-view {
  padding: 20rpx;
  background: #fff;
  margin: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.recent-scroll {
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  padding: 10rpx 0;
}

.recent-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  transition: transform 0.2s ease;
}

.recent-item:active {
  transform: scale(0.95);
}

.recent-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.recent-text {
  font-size: 24rpx;
  color: #333;
  margin-top: 8rpx;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 地图搜索样式 */
.map-section {
  padding: 20rpx;
  background: #fff;
}

.search-box {
  margin-bottom: 16rpx;
}

.search-input {
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.search-input:focus {
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 地图容器样式 */
.map-container {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  border-radius: 8rpx;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 搜索结果样式 */
.search-results {
  padding: 20rpx;
  background: #fff;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

.search-results.show {
  transform: translateY(0);
}

.result-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.result-title {
  font-size: 28rpx;
  color: #333;
}

.result-count {
  font-size: 24rpx;
  color: #999;
}

.page-title {
  font-size: 36rpx;
  color: #353535;
  font-weight: 500;
}